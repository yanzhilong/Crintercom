<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xmcrtech.intercom.DialerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_1"
            android:text="1"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_2"
            android:text="2"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_3"
            android:text="3"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:textSize="@dimen/number_size"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_4"
            android:text="4"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_5"
            android:text="5"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_6"
            android:text="6"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_7"
            android:text="7"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_8"
            android:text="8"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_9"
            android:text="9"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_clear"
            android:text="*"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_0"
            android:text="0"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/b_call"
            android:text="#"
            android:textSize="@dimen/number_size"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
