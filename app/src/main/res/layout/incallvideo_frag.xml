<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 音频切换到音频 -->

    <Button
        android:id="@+id/switch_audio"
        android:clickable="false"
        android:background="@color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dip"
        android:shadowColor="#353738"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:text="@string/avchat_switch_to_audio"
        android:textSize="13sp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频通话" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:descendantFocusability="beforeDescendants"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!-- 切换摄像头 -->
            <Button
                android:id="@+id/switch_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换"/>

            <!-- 关闭摄像头 -->
            <ToggleButton
                android:id="@+id/close_camera"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textOff="摄像头"
                android:textOn="摄像头"/>

            <ToggleButton
                android:id="@+id/muteTb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textOff="麦克风"
                android:textOn="麦克风"/>

            <ToggleButton
                android:id="@+id/speakerTb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textOff="扬声器"
                android:textOn="扬声器"/>

            <ToggleButton
                android:id="@+id/recordTb"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textOff="录制关"
                android:textOn="录制开"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/video_hangup"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="@string/avchat_hangup"
            android:textSize="17sp"
            android:visibility="visible"
            />


    </LinearLayout>
</LinearLayout>
